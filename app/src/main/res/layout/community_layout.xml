<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp">


        <TextView
            android:id="@+id/textView_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="81dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="25dp"
            android:text="用户名" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/simpleDraweeView"
            android:src="@mipmap/ic_launcher"
            android:background="@color/colorAccent"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignBottom="@+id/textView_title"
            android:layout_toLeftOf="@+id/textView_title"
            android:layout_toStartOf="@+id/textView_title" />


        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_userName"
            android:layout_alignStart="@+id/textView_userName"
            android:layout_centerVertical="true"
            android:text="标题"
            android:layout_toLeftOf="@+id/textView_time"
            android:layout_toStartOf="@+id/textView_time" />

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:text="内容" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="2017-9-9"
            android:layout_alignBaseline="@+id/textView_userName"
            android:layout_alignBottom="@+id/textView_userName"
            android:layout_alignRight="@+id/textView_content"
            android:layout_alignEnd="@+id/textView_content" />
    </RelativeLayout>

</LinearLayout>